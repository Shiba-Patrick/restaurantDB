<h1 class="restaurant-show-title">Edit : {{restaurant.name}}</h1>

<div class="container">
  <form action="/restaurants/{{restaurant._id}}/edit" method="POST">
    <div class="mb-1">
      <label for="name" class="form-label">Name<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="name" placeholder="印度餐廳" name="name" value="{{restaurant.name}}"
        required />
    </div>
    <div class="mb-1">
      <label for="name_en" class="form-label">Name_en<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="name_en" placeholder="India Restaurant" name="name_en"
        value="{{restaurant.name_en}}" required />
    </div>
    <div class="mb-1">
      <label for="category" class="form-label">Category<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="category" placeholder="中式" list="categoryOptions" name="category"
        value="{{restaurant.category}}" required />
      <datalist id="categoryOptions">
        <option>美式</option>
        <option>咖啡</option>
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
      </datalist>
    </div>
    <div class="mb-1">
      <label for="image" class="form-label">Image<span class="text-danger">*</span></label>
      <input type="url" class="form-control" id="image" name="image" value="{{restaurant.image}}" required />
    </div>
    <div class="mb-1">
      <label for="location" class="form-label">Address<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="location" placeholder="台北市信義區信義路123號" name="location"
        value="{{restaurant.location}}" required />
    </div>
    <div class="mb-1">
      <label for="phone" class="form-label">Phone<span class="text-danger">*</span></label>
      <input type="tel" class="form-control" id="phone" placeholder="02-123456789" name="phone"
        value="{{restaurant.phone}}" required />
    </div>
    <div class="mb-1">
      <label for="google_map" class="form-label">Google-Map<span class="text-danger">*</span></label>
      <input type="url" class="form-control" id="google_map" name="google_map" value="{{restaurant.google_map}}"
        required />
    </div>
    <div class="mb-1">
      <label for="rating" class="form-label">Rating<span class="text-danger">*</span></label>
      <input type="number" class="form-control" id="rating" min="0" max="5" step="0.1" name="rating"
        value="{{restaurant.rating}}" required />
    </div>
    <div class="mb-1">
      <label for="description" class="form-label">Description<span class="text-danger">*</span></label>
      <textarea class="form-control" id="description" rows="3" name="description"
        required>{{restaurant.description}}</textarea>
    </div>
    <div class="text-center mb-5">
      <button type="submit" class="btn btn-info">修改</button>
      <button type="reset" class="btn btn-outline-danger">重新輸入</button>
      <a href="/">
        <button type="button" class="btn btn-outline-secondary">首頁</button>
      </a>
    </div>
  </form>
</div>